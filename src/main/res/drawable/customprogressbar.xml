<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#E4E4E7"
                android:centerColor="#E4E4E7"
                android:centerY="1.0"
                android:endColor="#E4E4E7"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#91b2ff"
                    android:centerColor="#91b2ff"
                    android:endColor="#91b2ff"
                    android:type="sweep"
                    />
            </shape>
        </clip>
    </item>
</layer-list>